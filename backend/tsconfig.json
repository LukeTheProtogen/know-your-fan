{
  "compilerOptions": {
    "target": "ESNext",                                                                       
    "jsx": "react-jsx",                               
    "moduleDetection": "force",                        
    "module": "CommonJS",                                
    "rootDir": ".",                                  
    "moduleResolution": "node",
    "resolveJsonModule": true,                        
    "outDir": "./dist",                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": [
    "**/*.ts"
  ]
}
