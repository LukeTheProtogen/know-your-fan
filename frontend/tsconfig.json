{
  "compilerOptions": {
    "target": "ES2022",                                 
    "jsx": "react-jsx",                               
    "moduleDetection": "force",                        
    "module": "NodeNext",                                
    "rootDir": ".",                                  
    "moduleResolution": "nodenext",                
    "resolveJsonModule": true,                       
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                
  }
}